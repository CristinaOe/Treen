<div class="dashboard">
  <div class="user-el">
    <%= cl_image_tag "https://res.cloudinary.com/dr8v0dbbd/image/upload/v1622108180/users/pug.jpg", class: "avatar-large av-position" %>
    <h2 class="mt-3"><%= @user.first_name %> <%= @user.last_name %></h2>
    <small>@<%= @user.username %></small>
  </div>
  <div class="buttons">
    <%= link_to "Edit",  edit_user_registration_path, class: "btn btn-flat" %>
    <%= link_to "Delete your account", dashboard_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete your account?"}, class:"btn btn-flat" %>
  </div>
  <div class="brand-dash">
    <%= link_to "Suggest a brand",  new_brand_path, class: "btn btn-flat" %>
    <% @brands.each do |brand| %>
      <%= brand.name %>
      <%= brand.address %>
      <%= brand.description %>
      <%= brand.status %>
    <%= brand.photo.key%>
    <% end %>
  </div>
</div>
