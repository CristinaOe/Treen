<div class="dashboard">
  <div class="user-el">
    <%= cl_image_tag "https://res.cloudinary.com/dr8v0dbbd/image/upload/v1622108180/users/pug.jpg", class: "avatar-large av-position" %>
    <h2 class="mt-3"><%= @user.first_name %> <%= @user.last_name %></h2>
    <small>@<%= @user.username %></small>
  </div>
  <div class="buttons">
    <%= link_to "Edit",  edit_user_registration_path, class: "btn btn-flat" %>
    <%= link_to "Delete your account", dashboard_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete your account?"}, class:"btn btn-flat" %>
  </div>
  <div class="brand-dash">
    <%= link_to "Suggest a brand",  new_brand_path, class: "btn btn-flat" %>
    <% @brands.each do |brand| %>
      <%= brand.name %>
      <%= brand.address %>
      <%= brand.description %>
      <%= brand.status %>
    <%= cl_image_tag brand.photo.key, height:100, width:100%>
    <% end %>
  </div>
</div>
<div class = "my-2">
          <% current_user.brands.each do |brand| %>
          <div class="mb-4 d-flex justify-content-start" data-aos="zoom-in">
            <div class="card-trip">
                <% if brand.status == "Pending" %>
                  <%= cl_image_tag brand.photo.key %>
                  <div class="card-trip-infos">
                    <div class="p-3 d-flex flex-column">
                      <p> <i class="fas fa-circle pending" aria-hidden="true"></i>Pending verification</p>
                      <h2 class="my-2"><%= brand.name %></h2>
                      <p class="mb-2"><i class="fas fa-map-marker-alt orange-bar"> <%= brand.address %></i></p>
                      <p class="text-muted flex-grow-1"><%= brand.description %></p>
                   </div>
                 </div>
                <%elsif brand.status == "Accepted" %>
                  <%= cl_image_tag brand.pictures_url %>
                  <div class="card-trip-infos">
                    <div class="p-3 d-flex flex-column">
                      <h6> <%= brand.user.first_name %> accepted your request! </h6>
                      <p> <i class="fas fa-circle confirmed" aria-hidden="true">Thank you for your suggestion. <%= brand.address %> is now listed. <%= link_to 'Check it out here', brand_path %></i></p>
                      <h2 class="my-2"><%= brand.name %></h2>
                      <p class="mb-2"><i class="fas fa-map-marker-alt orange-bar"> <%= brand.address %></i></p>
                      <p class="text-muted flex-grow-1"><%= brand.description %></p>
                   </div>
                   <p class="card-trip-pricing flex-shrink-0"><i class="fas fa-euro-sign"></i><%= booking.total_value %>/trip</p>

                 </div>
                <%elsif booking.status == "Rejected" %>
                  <%= cl_image_tag brand.pictures_url %>
                  <div class="card-trip-infos">
                    <div class="p-3 d-flex flex-column">
                      <p> <i class="fas fa-circle rejected" aria-hidden="true"></i>We're sorry, <%= brand.name %> didn't meet our sustainability rating standards. </p>
                      <h2 class="my-2"><%= brand.name %></h2>
                      <p class="mb-2"><i class="fas fa-map-marker-alt orange-bar"> <%= brand.address %></i></p>
                      <p class="text-muted flex-grow-1"><%= brand.description %></p>
                   </div>

                 </div>
                <% end %>
            </div>
          </div>
          <% end %>
        </div>
