<div class="container">
  <div class="row">
      <%= cl_image_tag @brand.photo.key, class:"brand-image", :crop=>"fill" %>
  </div>
  <br>
    <div class="title d-flex">
      <p><%= @average_reviews %></p>
    </div>
  <p> <%= @brand.address %></p>
    <div class="icon">
        <% @brand_policies.each do |brand|  %>
        <% if brand.policy.title == "Vegan" %>
          <div class="brand-policy-icon">
            <%= image_tag "vegan-badge.png", width:50 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Carbon Footprint" %>
          <div class="brand-policy-icon">
            <%= image_tag "co2-badge.png", width:50 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Fair Trade" %>
          <div class="brand-policy-icon">
            <%= image_tag "fair-trade.png", width:50 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Organic Fabrics" %>
          <div class="brand-policy-icon">
            <%= image_tag "organic-badge.png", width:50 %>
            <span class="badge badge-secondary"><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Good Cause" %>
          <div class="brand-policy-icon">
            <%= image_tag "good-badge.png", width:50 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Second Hand" %>
          <div class="brand-policy-icon">
            <%= image_tag "second_hand_badge.png", width:50 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% end %>
      <% end %>
    </div>

<br>

    <ul class="social d-flex space-between">
  <li class="social-container">
    <h6 class="m-3 share">Share on</h6>
    <a href="https://twitter.com/intent/tweet?url=www.treen.xyz&text=I have discovered @<%= raw @brand.name %> which is a great sustainable shop on this amazing app. Check it out:"  onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=240,width=600');return false;" class= "social-icon">
        <i class="fab fa-twitter m-3"></i>
    </a>
  </li>
  <li class="social-container">
    <h6 class="m-3 share">Share on</h6>
    <a href="https://www.facebook.com/sharer/sharer.php?u=www.treen.xyz" onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=240,width=600');return false;" class="social-icon">
        <i class="fab fa-facebook-f m-3"></i>
    </a>
  </li>
</ul>

  <p class="text-muted"><%= @brand.description %></p>
  <div class="reviewform">
    <h5>Reviews</h5>
    <%=render 'shared/reviewform' %>
  </div>
  <div class="text-muted mb-5">
    <div class="reviews d-flex">
      <% @brand_reviews.each do |review| %>
        <div class="stars">
        <% review.rating.times do %>
                <i class="fa fa-star" aria-hidden="true" ></i>
                <% end %>
                <% (5- review.rating).times do %>
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                <% end %>
        <p><%= review.content %></p>
         <!--  <tr>
              <td><%#= link_to 'Edit', edit_brand_review_path(@brand, review) %></td>
              <td><%#= link_to 'Delete', @brand, method: :delete, data: { confirm: 'Are you sure?'} %></td>
          </tr> -->
        </div>
      <% end %>
    </div>
  </div>
</div>


