
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-5"><%= @brand.name %></h1>
      <p class="text-muted"><%= @brand.description %></p>
    </div>
  </div>
</div>
<br>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-12">
      <div class="icon">
        <a href="#" class ="icon"><%= image_tag "carbon-footprint.png", width: 50 %></a>
        <a href="#" class ="icon"><%= image_tag "fair-trade.png", width: 40 %></a>
        <a href="#" class ="icon"><%= image_tag "plant-based.png", width: 40 %></a>
        <a href="#" class ="icon"><%= image_tag "solidarity.png", width: 40 %></a>
      </div>
    </div>
  </div>
</div>
<br>
