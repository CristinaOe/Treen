<div class="container">
  <div class="row">
      <img src="https://source.unsplash.com/collection/12277519/640x426" width=100%>
  </div>
  <br>
    <div class="title d-flex">
      <h1><%= @brand.name %></h1>
      <p><%= @average_reviews %></p>
    </div>
  <p> <%= @brand.address %></p>
    <div class="icon">
        <% @brand_policies.each do |brand|  %>
        <% if brand.policy.title == "Vegan" %>
          <div class="brand-policy-icon">
            <%= image_tag "fair-trade.png", width: 40 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Carbon Footprint" %>
          <div class="brand-policy-icon">
            <%= image_tag "fair-trade.png", width: 40 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Fair Trade" %>
          <div class="brand-policy-icon">
            <%= image_tag "fair-trade.png", width: 40 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Organic Fabrics" %>
          <div class="brand-policy-icon">
            <%= image_tag "fair-trade.png", width: 40 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Good Cause" %>
          <div class="brand-policy-icon">
            <%= image_tag "fair-trade.png", width: 40 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% elsif  brand.policy.title == "Second Hand" %>
          <div class="brand-policy-icon">
            <%= image_tag "fair-trade.png", width: 40 %>
            <span class="badge badge-secondary" ><%= brand.ranking  %></span>
          </div>
        <% end %>
      <% end %>
    </div>

<br>
  <div class="social">
    <%= social_share_button_tag('I have discovered this sustainable brand @' + @brand.name + ' on this awesome app', url: 'https://treen-mv.herokuapp.com', desc: @brand.name) %></a>
  </div>
